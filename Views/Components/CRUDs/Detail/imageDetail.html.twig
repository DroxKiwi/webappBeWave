


<table class="table">
  <thead>
    <tr>
      <th scope="col">Informations images</th>
      <th scope="col">Accès</th>
    </tr>
  </thead>

  <tbody>
    <form action="/updateimage" method="post">
      <input type="hidden" class="form-control" id="image_id" name="image_id" value="{{ image_id }}">
      <tr>
        <td>Identifiant BDD : {{ image_id }}</td>
        <td>Refusé</td>
      </tr>
      <tr>
        <td>Image : </td>
        <td><img src="/Uploads/{{name ~ extension}}" alt="img" style="height: 100px; width: 100px;" /></td>
      </tr>
      <tr>
        <td>name : {{ name }}</td>
        <input type="hidden" id="oldname" name="oldname" value={{ name }}>
        <td><input type="text" class="form-control" id="name" name="name" value="{{ name }}" required></td>
      </tr>
      <tr>
        <td>extension : {{ extension }}</td>
        <input type="hidden" id="oldext" name="oldext" value={{ extension }}>
        <td><select class="form-control" id="extension" name="extension">
              <option {% if extension == '.jpg' %} selected="selected" {% endif %} value=".jpg">jpg</option>
              <option {% if extension == '.png' %} selected="selected" {% endif %} value=".png">png</option>
            </select>
        </td>
      </tr>
      <button type="submit" class="btn btn-outline-warning">Enregistrer modification</button>
    </form>
  </tbody>
</table>
<form action="/deleteimage" method="post">
  <input type="hidden" class="form-control" id="image_id" name="image_id" value="{{ image_id }}">
  <button type="submit" class="btn btn-outline-danger">Supprimer</button>
</form>
