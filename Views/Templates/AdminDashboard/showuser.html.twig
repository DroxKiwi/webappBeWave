{% extends 'base.html.twig' %}
{% set modepreference = templateVars[5] %}

<!DOCTYPE html>

<html>
  {% block content %}

        <div class="container-fluid text-center">
          <header>
            <h1>
              Bienvenu sur l'application !
            </h1>
            <ul class="nav nav-tabs justify-content-center">
              <li>
                <button onclick="location.href = '/'" type="button" style="margin-right: 20px;" class="btn btn-outline-info">Application</button>
              </li>
              <li>
                <button data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample" type="button" style="margin-left: 10px;" class="btn btn-outline-info">{{ templateVars[0] }}</button>
              </li>
            </ul>
          </header>
          <h2>
            {{ templateVars[3] }}
          </h2>


          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Liste utilisateurs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/makeuser">Nouvel utilisateur</a>
            </li>
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Valider</button>
            </form>
          </ul>


          <table class="table">
            <thead>
              <tr>
                <th scope="col">Informations utilisateur</th>
                <th scope="col">Accès</th>
              </tr>
            </thead>

            <tbody>
              <form action="/userUpdate" method="post">
                <input type="hidden" class="form-control" id="nonselfupdate" name="nonselfupdate" value="true">
                <input type="hidden" class="form-control" id="user_id" name="user_id" value="{{ templateVars[2] }}">
                <tr>
                  <td>Identifiant BDD : {{ templateVars[2] }}</td>
                  <td>Refusé</td>
                </tr>
                <tr>
                  <td>Pseudonyme : {{ templateVars[3] }}</td>
                  <td><input type="text" class="form-control" id="pseudo" name="pseudo" value="{{ templateVars[3] }}" required></td>
                </tr>
                <tr>
                  <td>Email : {{ templateVars[4] }}</td>
                  <td><input type="text" class="form-control" id="email" name="email" value="{{ templateVars[4] }}" required></td>
                </tr>
                <tr>
                  <td>Token : {{ templateVars[5] }}</td>
                  <td>Refusé</td>
                </tr>
                <tr>
                  <td>Role : {{ templateVars[6] }}</td>
                  <td>
                    <select id="role" name="role" required>
                      <option value="ROLE_USER">Utilisateur</option>
                      <option value="ROLE_ADMIN">Administrateur</option>
                    </select>
                  </td>
                </tr>
                {% if templateVars[1] == "lightmode" %}
                  <button type="submit" class="btn btn-outline-dark">Enregistrer</button>
                {% else %}
                  <button type="submit" class="btn btn-outline-light">Enregistrer</button>
                {% endif %}
              </form>
              <form action="/resetpassworduser" method="post">
                <input type="hidden" class="form-control" id="user_id" name="user_id" value="{{ templateVars[2] }}">
                <tr>
                  <td>Mot de passe</td>
                  <td><button type="submit" class="btn btn-outline-danger">Reinitialiser</button></td>
                </tr>
              </form>
            </tbody>
          </table>

          <button type="button" style="margin-top: 10px;" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">Supprimer l'utilisateur !</button>

        </div>
  {% endblock %}
</html>