{% extends 'base.html.twig' %}
{% set modepreference = preference %}

<!DOCTYPE html>

<html>
  {% block content %}

    <div class="container-fluid text-center">
      <h2>
        Gestion des formulaires utilisateurs
      </h2>

      {% include 'Components/headerDashboard.html.twig' %}


      <table class="table">
        <thead>
          <tr>
            <th scope="col">contact_id</th>
            <th scope="col">user_id</th>
            <th scope="col">type</th>
            <th scope="col">message</th>
          </tr>
        </thead>

        <tbody>
          {% for form in forms %}
            <tr class="table-info ">
              <td>{{ form.contact_id }}</td>
              <td>{{ form.user_id }}</td>
              <td>{{ form.type }}</td>
              <td>{{ form.message }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      {% include 'Components/sidemenu.html.twig' %}


    </div>

  {% endblock %}
</html>